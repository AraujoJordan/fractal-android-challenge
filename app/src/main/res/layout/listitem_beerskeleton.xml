<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorSecondary"
        android:layout_marginBottom="1dp"
        android:layout_height="80dp">

    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_width="70dp"
            android:background="#1000"
            android:layout_height="match_parent"
            android:id="@+id/beeritem_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_width="150dp"
            android:background="#1000"
            android:layout_height="20dp"
            android:id="@+id/beeritem_title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/beeritem_img"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/beeritem_tagline"
            android:background="#1000"
            app:layout_constraintStart_toEndOf="@+id/beeritem_img"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/beeritem_title"
    />
    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#1000"
            android:id="@+id/beeritem_continueImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>